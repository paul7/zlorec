{namespace zlorec.view}

{template implementation-info}
	  {$type} {$version}
{/template}

{template main-view}
	  <div class="header">
	       ZLO Recovery
	  </div>

	  {$body |noAutoescape}

	  <div class="footer">
	       Powered by
	       {call implementation-info data="$impl" /}
	  </div>
{/template}

{template graph-form}
	  <form action="{$graphurl}" method="post">
	  	<div>
		Username: <input type="text" name="user" />
		</div>
		<div>
		<input type="text" name="amount" value="12" /> 
			<input type="radio" name="unit" value="day" /> days
		       	<input type="radio" name="unit" value="month" checked /> months
			<input type="radio" name="unit" value="year" /> years
		</div>
		<input type="submit" name="send" value="Send" />
	  </form>
{/template}

{template graph}
	  <object data="{$graph}"></object>
	  {foreach $item in $values}
	  	   <div>{$item}</div>
	  {/foreach}
	  <a href="{$return}">Return</a>
{/template}

{template svg-rect}
     <rect x="{$offset}" y="{$height - $y}" height="{$y}" width="{$x}"
     	   fill="gray" stroke="black" />
{/template}

{template user-activity}
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<svg version = "1.1"
     baseProfile="full"
     xmlns = "http://www.w3.org/2000/svg" 
     xmlns:xlink = "http://www.w3.org/1999/xlink"
     xmlns:ev = "http://www.w3.org/2001/xml-events"
     height = "{$height}"  width = "{$width}">
{if not $error}	     
     <rect x="0" y="0" width="{$width}" height="{$height}" 
          fill="none" stroke="black" stroke-width="5px" stroke-opacity="0.5"/>
     {foreach $val in $values}
     	      {call svg-rect data="$val" /}
     {/foreach}
{/if}
</svg>
{/template}
